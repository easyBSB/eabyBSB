{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "outDir": "../../dist/out-tsc",
    "paths": {
      "@app/auth": ["./src/app/auth/index.ts"],
      "@app/users": ["./src/app/users/index.ts"],
      "@app/roles": ["./src/app/roles/index.ts"],
      "@connections/*": ["./src/app/connections/*"],
      "@easybsb/parser": ["../../libs/easybsb-parser/src"]
    },
    "target": "es2015",
    "types": ["node"],
  },
  "exclude": ["**/*.spec.ts", "**/*.test.ts"],
  "include": ["**/*.ts"],
}
