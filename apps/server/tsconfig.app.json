{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "outDir": "../../dist/out-tsc",
    "paths": {
      "@auth/*": ["./src/app/auth/*"],
      "@connections/*": ["./src/app/connections/*"],
      "@users/*": ["./src/app/users/*"],
      "@easybsb/parser": ["../../libs/easybsb-parser/src"]
    },
    "target": "es2015",
    "types": ["node"],
  },
  "exclude": ["**/*.spec.ts", "**/*.test.ts"],
  "include": ["**/*.ts"],
}
