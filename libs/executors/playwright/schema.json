{
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "cli": "nx",
  "properties": {
    "app": {
      "type": "object",
      "description": "app to run",
      "properties": {
        "start": {
          "type": "boolean",
          "description": "starts web application",
          "default": true
        },
        "port": {
          "type": "number",
          "description": "port number",
          "default": 4200
        }
      }
    },
    "server": {
      "type": "object",
      "description": "start nestjs server",
      "properties": {
        "start": {
          "type": "boolean",
          "description": "starts nestjs server",
          "default": true
        },
        "port": {
          "type": "number",
          "description": "port number",
          "default": 3333
        }
      }
    }
  }
}
