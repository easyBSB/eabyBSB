{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "noImplicitOverride": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@easy-bsb/queue": [
        "libs/queue/src/index.ts"
      ],
      "@easy-bsb/parser": [
        "libs/easybsb-parser/src/index.ts"
      ],
      "@easy-bsb/server/lib/*": [
        "apps/server/src/app/libs/*/index.ts",
        "apps/server/src/app/libs/*/public-api.ts",
      ],
      "@easy-bsb/server/core/*": [
        "apps/server/src/app/core/*/index.ts",
        "apps/server/src/app/core/*/public-api.ts",
      ],
      "@easy-bsb/web/core/*": [
        "apps/web/src/app/core/*/index.ts",
        "apps/web/src/app/core/*/public-api.ts",
      ],
      "@easy-bsb/web/lib/*": [
        "apps/web/src/app/libs/*/index.ts",
        "apps/web/src/app/libs/*/public-api.ts",
      ],
      "@easy-bsb/web/api/*": [
        "apps/web/src/app/interfaces/*/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
